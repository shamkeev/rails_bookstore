<!DOCTYPE html>
<html>
<head>
  <title>Bookstore | Admin Panel</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Bookstore Admin', admin_path, class:"navbar-brand"%>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if params[:controller] == 'books' %>"><%= link_to 'Books', books_path %></li>
        <li class="<%= 'active' if params[:controller] == 'authors' %>"><%= link_to 'Authors', authors_path %></li>
        <li class="<%= 'active' if params[:controller] == 'genres' %>"><%= link_to 'Genres', genres_path %></li>
      </ul>

    </div><!--/.nav-collapse -->
  </div>
</nav>
<div class="container">
  <%= yield %>
</div>

</body>
</html>
