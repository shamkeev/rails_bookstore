<h4>All authors</h4>

<table class="table table-hover">
  <thead>
  <tr>
    <th>No.</th>
    <th>Pic.</th>
    <th>Name</th>
    <th>Bio</th>
  </tr>
  </thead>
  <tbody>
  <% count = 0 %>
  <% @authors.each do |author| %>
      <tr>
        <td> <%= count = count + 1 %></td>
        <td><%= link_to image_tag("/uploads/authors/#{author.id}", height:'80'), show_author_path(author) %></td>
        <td><%= link_to author.name, show_author_path(author) %></td>
        <td class="desc-700"><%= author.bio %></td>
      </tr>
  <% end %>
  </tbody>
</table>