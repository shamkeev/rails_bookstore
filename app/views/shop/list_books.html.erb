<h4>Все книги</h4>

<table class="table table-hover">
  <thead>
  <tr>
    <th>No.</th>
    <th>Image</th>
    <th>Title</th>
    <th>Description</th>
    <th>Author</th>
    <th>Genre</th>
    <th>Price</th>
  </tr>
  </thead>
  <tbody>
  <% count = 0 %>
  <% @books.each do |book| %>
      <tr>
        <td><%= count = count + 1 %></td>
        <td><%= link_to image_tag("/uploads/#{book.id}", height:'80'), show_book_path(book) %></td>
        <td><%= link_to book.title, show_book_path(book) %></td>
        <td class="desc"><%= book.description %></td>
        <td><%= book.author.name %></td>
        <td><%= book.genre.title %></td>
        <td><%= book.price %></td>
      </tr>
  <% end %>
  </tbody>
</table>

