<h4>Все книги</h4>

<%= link_to 'Add New Book', new_book_path, class:"btn btn-primary" %>

<table class="table table-hover">
	<thead>
		<tr>
          <th>No.</th>
          <th>Image</th>
          <th>Title</th>
          <th>Description</th>
          <th>Author</th>
          <th>Genre</th>
          <th>Price</th>
          <th>Actions</th>
		</tr>
	</thead>
	<tbody>
    <% count = 0 %>
    <% @books.each do |book| %>
        <tr>
          <td><%= count = count + 1 %></td>
          <td><%= image_tag "/uploads/books/#{book.id}", height:'80' %></td>
          <td><%= book.title %></td>
          <td class="desc"><%= book.description %></td>
          <td><%= book.author.name %></td>
          <td><%= book.genre.title %></td>
          <td><%= number_with_precision book.price, :precision => 2%></td>
          <td>
            <%= link_to 'View', book_path(book) %>
            <%= link_to 'Edit', edit_book_path(book) %>
            <%= link_to 'Delete', book_path(book), method: :delete,
                                                    data: {confirm: "Are you sure?"}%>

          </td>
        </tr>
    <% end %>
	</tbody>
</table>

