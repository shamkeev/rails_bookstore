<h4>Book Info</h4>
<div class="col-md-4">
  <%= image_tag "/uploads/books/#{@book.id}", height: '400' %>
</div>
<div class="col-md-6">
  <div class="page-header">
    <h4><%= @book.title %><small> by <%= link_to @book.author.name, author_path(@book.author.id) %></small></h4>
    <strong><%= @book.genre.title %></strong><br>
    <strong>Price: <%= number_with_precision @book.price, :precision => 2%></strong>
  </div>
  <div class="well">
    <p><%= @book.description %></p>
  </div>
</div>
<div class="col-md-2">
  <%= link_to 'Edit', edit_book_path(@book), class:"btn btn-info" %> <br>
  <%= link_to 'Delete', book_path(@book), method: :delete,
              data: {confirm: "Are you sure?"}%> <br>
  <hr>
</div>
