<h4>Book Info</h4>
<div class="col-md-4">
  <%= image_tag "/uploads/#{@book.id}", height: '400' %>
</div>
<div class="col-md-6">
  <div class="page-header">
    <h4><%= @book.title %><small> by <%= link_to @book.author.name, author_path(@book.author.id) %></small></h4>
    <strong><%= @book.genre.title %></strong><br>
    <strong>Price: <%= @book.price %></strong>
  </div>
  <div class="well">
    <p><%= @book.description %></p>
  </div>
</div>
<div class="col-md-2">
  <%= link_to 'Edit', edit_book_path(@book.id), class:"btn btn-info" %> <br>
  <hr>
</div>
