<h4>Author info</h4>
<div class="col-md-4">
  <%= image_tag "/uploads/authors/#{@author.id}", height: '300' %>

</div>

<div class="col-md-5">
  <h5><%= @author.name %></h5>

  <div class="well">
    <p><%= @author.bio %></p>
  </div>
</div>

<div class="col-md-3">
  <%= link_to 'Edit', edit_author_path(@author.id), class:"btn btn-info" %> <br>
  <hr>
  <strong>List of Books:</strong>
  <ul>
    <% @author_books.each do |book| %>
        <li><%= link_to book.title, book_path(book) %></li>
    <% end %>
  </ul>
</div>
