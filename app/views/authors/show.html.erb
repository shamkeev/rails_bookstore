<h4>Author info</h4>
<div class="col-md-4">
  <%= link_to 'Edit', edit_author_path(@author.id), class:"btn btn-info" %> <br>
  <hr>
  <%= image_tag "/uploads/#{@author.id}", height: '300' %>

  <div class="row">
    <strong>List of Books:</strong>
    <ul>
      <% @author_books.each do |book| %>
        <li><%= link_to book.title, book_path(book) %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="col-md-8">
  <h5><%= @author.name %></h5>

  <div class="well">
    <p><%= @author.bio %></p>
  </div>
</div>
