<h3>List of all genres</h3>

<%= link_to 'New genre', new_genre_path, class:"btn btn-primary" %>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
            <th>Actions</th>
		</tr>
	</thead>
	<tbody>
        <% @genres.each do |genre| %>
		<tr>
			<td><%= genre.title %></td>
			<td><%= genre.description %></td>
            <td>
              <%= link_to 'View', genre_path(genre) %>
              <%= link_to 'Edit', edit_genre_path(genre) %>
              <%= link_to 'Delete', genre_path(genre), method: :delete,
                          data:{confirm: "Are you sure?"} %>
            </td>
		</tr>
        <% end %>
	</tbody>
</table>